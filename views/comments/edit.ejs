<% include ../partials/header%>

<div class ="container">
    <div class="row">
        <h1 style = "text-align: center;">Add new Comment to <%= campGround.name%></h1>
        <div style="width:30%; margin: 25px auto;">
            <form action = "/campgrounds/<%=campGround._id%>/comments/<%=comment._id%>?_method=PUT" method = "POST">
                <div class="form-group">
                        <input class = "form-control" type = "text" name = "text" placeholder = "text" value = "<%=comment.text%>">
                </div>          
                    <button class = "btn btn-lg btn-primary btn-block">Add Comment</button>
                </div>
            </form>
            <a href = "/campgrounds">Go Back</a>
        </div>
    </div>
</div>

