<% include ../partials/header %>

<div class ="container">
    <div class="row">
        <h1 style = "text-align: center;">Editing <%campGround.name%></h1>
        <div style="width:30%; margin: 25px auto;">
            <form action = "/campgrounds/<%=campGround._id%>/?_method=PUT" method = "POST">
                <div class="form-group">
                        <input class = "form-control" type = "text" name = "campground[name]" placeholder = "Camp Ground Name" value ="<%=campGround.name%>">
                </div>
                <div class="form-group">
                        <input class = "form-control" step ="0.01" value = "0.00" type = "number" name = "campground[price]" placeholder = "Camp Ground Price" value ="<%=campGround.price%>">
                </div>  
                <div class="form-group">
                     <input class = "form-control" type = "text" name = "campground[image]" placeholder = "Camp Ground Image" value ="<%=campGround.image%>">
                </div>
                <div class="form-group">
                     <input class = "form-control" type = "text" name = "campground[description]" placeholder = "Camp Ground Description" value ="<%=campGround.description%>">
                </div>         
                <div class="form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Update Campground</button>
                </div>
            </form>
            <a href = "/campgrounds">Go Back</a>
        </div>
    </div>
</div>


<%include ../partials/footer%>