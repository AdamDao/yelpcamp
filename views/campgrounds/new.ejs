<% include ../partials/header %>

<div class ="container">
    

    
    <div class="row">
        <h1 style = "text-align: center;">Create a new Campground</h1>
        <div style="width:30%; margin: 25px auto;">
            <form action = "/campgrounds" method = "POST">
                <div class="form-group">
                        <input class = "form-control" type = "text" name = "campgroundname" placeholder = "Camp Ground Name">
                </div>
                <div class="form-group">
                        <input class = "form-control" step ="0.01" value = "0.00" type = "number" name = "campgroundprice" placeholder = "Camp Ground Price">
                </div>      
                <div class="form-group">
                     <input class = "form-control" type = "text" name = "campgroundimage" placeholder = "Camp Ground Image">
                </div>
                <div class="form-group">
                     <input class = "form-control" type = "text" name = "campgrounddescription" placeholder = "Camp Ground Description">
                </div>         
                <div class="form-group">
                    <button class = "btn btn-lg btn-primary btn-block">Add Campground</button>
                </div>
            </form>
            <a href = "/campgrounds">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>